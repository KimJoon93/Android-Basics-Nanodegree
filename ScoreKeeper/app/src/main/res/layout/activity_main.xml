<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:fontFamily="sans-serif-medium"
                android:textColor="#616161"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Team A" />

            <TextView
                android:paddingBottom="24dp"
                android:paddingTop="16dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="56sp"
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="successTeamA"
                android:text="Success" />

            <Button
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="failTeamA"
                android:text="Fail" />

            <Button
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="startCussionTeamA"
                android:text="3 Cussion start" />

            <TextView
                android:id="@+id/cussionTeamAstart"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="3 Cussioning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@android:color/darker_gray"
            android:layout_width="1dp"
            android:layout_height="match_parent"></View>

        <LinearLayout
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:fontFamily="sans-serif-medium"
                android:textColor="#616161"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Team B" />

            <TextView
                android:paddingBottom="24dp"
                android:paddingTop="16dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="56sp"
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="successTeamB"
                android:text="Success" />

            <Button
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="failTeamB"
                android:text="Fail" />

            <Button
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="startCussionTeamB"
                android:text="3 Cussion Start" />

            <TextView
                android:id="@+id/cussionTeamBstart"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="3 Cussioning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginBottom="32dp"
        android:onClick="resetScore"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset" />

</RelativeLayout>